@model ELinkTech.Models.Product
@{
}

<h1>Edit Service</h1>
<form method="post" action="UpdateProduct" class="mt-5">
    @using (Html.BeginForm())
    {
       <div class="mb-3" hidden> 
            <label>@Html.LabelFor(m => m.ProductID)</label>
            <input type="text" class="form-control" asp-for="ProductID" readonly />
        </div>
         <div class="mb-3">
            <label>@Html.LabelFor(m => m.ProductName)</label>
            <input type="text" class="form-control" asp-for="ProductName" placeholder="Name of service" />
        </div>
        <div class="mb-3">
            <label>@Html.LabelFor(m => m.ProductImage)</label>
            <input type="url" class="form-control" asp-for="ProductImage" placeholder="Please provide URL of image" />
        </div>
        <div>
            <label>@Html.LabelFor(m => m.SupplierID)</label>
        </div>
        <div class="row mb-2">
            <label class="form-label">
               @Html.DropDownListFor(m => m.SupplierID, new SelectList(Model.SupplierList, "Value", "Text"), "Select a supplier", new { @id ="idDD", @class = "form-control"})
            </label>
        </div>
          <div>
            <label>@Html.LabelFor(m => m.CategoryID)</label>
        </div>
         <div class="row mb-2">
            <label class="form-label">
               @Html.DropDownListFor(m => m.CategoryID, new SelectList(Model.CategoryList, "Value", "Text"), "Select Category", new { @id ="idDD", @class = "form-control"})
            </label>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button> 
    }
    
</form>