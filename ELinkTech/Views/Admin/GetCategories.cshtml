@model IEnumerable<ELinkTech.Models.Category>
<form class="pb-2" method="get">
    <button class="btn btn-primary" asp-action="AddCategory">Add</button>
</form>
<table class="table table-striped">
    <tr>
        <th>@Html.DisplayNameFor(m => m.CategoryName)</th>
        <th></th>
    </tr>
    @foreach (var category in Model)
    {
        <tr>
            <td>@category.CategoryName</td>
            <td>@Html.ActionLink("Edit", "UpdateCategory", new { id = category.CategoryID })</td>
            <td>@Html.ActionLink("Delete", "DeleteCategory", new { id = category.CategoryID })</td>
        </tr>
    }
</table>



