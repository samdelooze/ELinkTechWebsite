@model IEnumerable<ELinkTech.Models.Supplier>
<div class="container" style="padding-top: 100px;">
    <ul class="nav nav-tabs nav-justified mb-5">
        <li class="nav-item">
            <a class="nav-link" asp-controller="Product" asp-action="FindProducts">Services</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" aria-current="page" asp-controller="Admin" asp-action="GetSuppliers">Suppliers</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Admin" asp-action="GetCategories">Categories</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Admin" asp-action="GetQuotes">Quotes</a>
        </li>
    </ul>

    <div class="row justify-content-md-center">
        <div class="col-12">
            <h1 class="mb-3 text-center">Supplier List</h1>
            <div class="row">
                <form method="get">
                    <button class="product-btn btn btn-custom float-end mb-3" asp-action="AddSupplier">Add</button>
                </form>
            </div>
            <div class="table-responsive">
                <table class="table table-striped">
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.SupplierName)</th>
                        <th>@Html.DisplayNameFor(m => m.Phone)</th>
                        <th>@Html.DisplayNameFor(m => m.Email)</th>
                        <th>@Html.DisplayNameFor(m => m.Street)</th>
                        <th>@Html.DisplayNameFor(m => m.Suburb)</th>
                        <th>@Html.DisplayNameFor(m => m.State)</th>
                        <th>@Html.DisplayNameFor(m => m.Postcode)</th>
                        <th></th>
                        <th></th>
                    </tr>
                    @foreach (var supplier in Model)
                    {
                        <tr>
                            <td>@supplier.SupplierName</td>
                            <td>@supplier.Phone</td>
                            <td>@supplier.Email</td>
                            <td>@supplier.Street</td>
                            <td>@supplier.Suburb</td>
                            <td>@supplier.State</td>
                            <td>@supplier.Postcode</td>
                            <td>@Html.ActionLink("Edit", "UpdateSupplier", new { id = supplier.SupplierID })</td>
                            <td> @Html.ActionLink("Delete", "DeleteSupplier", new { @id = supplier.SupplierID }, new { @onClick = "return confirm('Are you sure you want to delete?')" })</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>