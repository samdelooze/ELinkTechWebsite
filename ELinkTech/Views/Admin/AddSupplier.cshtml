@model ELinkTech.Models.Supplier

<div class="container" style="padding-top: 100px;">
    <ul class="nav nav-tabs nav-justified mb-5">
        <li class="nav-item">
            <a class="nav-link" asp-controller="Product" asp-action="FindProducts">Services</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" aria-current="page" asp-controller="Admin" asp-action="GetSuppliers">Suppliers</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Admin" asp-action="GetCategories">Categories</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Admin" asp-action="GetQuotes">Quotes</a>
        </li>
    </ul>

    <div class="row justify-content-md-center">
        <div class="col-md-12 col-lg-8">
            <div asp-validation-summary="All" class="text-danger"></div>
            <h1 class="mb-3 text-center">Add Supplier</h1>
            <form method="post" action="AddSupplier" class="mt-5">
                @using (Html.BeginForm())
                {
                    <div class="mb-3">
                        <label>@Html.LabelFor(m => m.SupplierName)</label>
                        <input type="text" class="form-control" asp-for="SupplierName" placeholder="Name of supplier" required />
                        <span asp-validation-for="SupplierName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label>@Html.LabelFor(m => m.Phone)</label>
                        <input type="text" class="form-control" asp-for="Phone" placeholder="Contact number of supplier" required />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label>@Html.LabelFor(m => m.Email)</label>
                        <input type="email" class="form-control" asp-for="Email" placeholder="Email address" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label>@Html.LabelFor(m => m.Street)</label>
                        <input type="text" class="form-control" asp-for="Street" placeholder="Street address" required />
                        <span asp-validation-for="Street" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label>@Html.LabelFor(m => m.Suburb)</label>
                        <input type="text" class="form-control" asp-for="Suburb" placeholder="Suburb/City" required />
                        <span asp-validation-for="Suburb" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label>@Html.LabelFor(m => m.State)</label>
                        <input type="text" class="form-control" asp-for="State" placeholder="State" required />
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label>@Html.LabelFor(m => m.Postcode)</label>
                        <input type="text" class="form-control" asp-for="Postcode" placeholder="Postcode" required />
                        <span asp-validation-for="Postcode" class="text-danger"></span>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="product-btn btn btn-custom">Submit</button>
                    </div>
                }

            </form>
        </div>
    </div>
</div>